#User function Template for python3

class Solution:
    def leftElement(self, arr, n):
    # Your code goes here  
        arr.sort()
        l = len(arr)
        if l % 2 == 0:
            return arr[int(l/2)-1]
        else:
            return arr[int(l/2)]
        


